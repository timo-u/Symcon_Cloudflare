{
    "elements":
    [
        { "type": "ValidationTextBox", "name": "APIKey", "caption": "API-Key" },
        { "type": "ValidationTextBox", "name": "MailAddress", "caption": "Mail Address" },
        { "type": "ValidationTextBox", "name": "Domain", "caption": "Domain" },
		        { "type": "ValidationTextBox", "name": "RecordName", "caption": "RecordName" },
        { "type": "Select", "name": "RecordType", "caption": "Record-Type",
            "options": [
                { "label": "A", "value": 0 },
                { "label": "AAAA", "value": 1 }
        ]}
    ],
    "actions":
    [
        { "type": "Button", "label": "Authenticate", "onClick": "SMS_Send($id, $Number, $Message);" },
		{ "type": "Button", "label": "Get Current IP", "onClick": "echo CF_GetIpAddress($id);" },
        { "type": "Button", "label": "Update DNS Record", "onClick": "echo 'Balance: '.sprintf('%.2f', SMS_RequestBalance($id)).' credits';" }
    ],
    "status":
    [
        { "code": 102, "icon": "active", "caption": "Login information valid" },
        { "code": 201, "icon": "error", "caption": "Authentication failed" }
    ]
}